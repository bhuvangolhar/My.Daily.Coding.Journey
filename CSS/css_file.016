/* (CSS File : Text decoration properties) */

body 
{
    background-color: whitesmoke;
    font-family: Arial, Helvetica, sans-serif;
}
div
{
    text-align: justify;
    margin-top: 225px;
    margin-right: 225px;
    margin-bottom: 225px;
    margin-left: 225px;
    padding-top: 90px;
    padding-right: 110px;
    padding-bottom: 110px;
    padding-left: 110px;
    outline-width: 7px;
    outline-style: solid;
    outline-color: black;
    outline-offset: 7px;
    text-decoration-line: underline;
    text-decoration-style: dotted;
    text-decoration-color: yellow;
    text-decoration-thickness: 3px;
    color: blue;
    font-size: 18px;
    height: 30px;
    width: 980px;
    background-color: maroon;
}

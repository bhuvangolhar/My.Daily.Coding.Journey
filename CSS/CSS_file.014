/* (CSS File : Text decoration properties) */

body 
{
   background-color: whitesmoke;
   font-size: 31px;
   height: 112px;
   width: 288px;
   line-height: 1.1;
}
#a1
{
    color: purple;
    border: 3px solid indigo;
    text-align: center;
    margin: 123px 121px 121px 123px;
    padding: 71px 91px 71px 91px;
    outline: groove azure 4px 4px ;
    text-decoration-line: none;
    text-decoration-color: red;
    text-decoration-style: wavy;
    text-decoration-thickness: 2px;
}
